<resources>
    <style name="Theme.BarApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>

        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>

        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>

        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>

        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>

        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>

        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="elevationOverlayColor">@color/md_theme_light_surfaceTint</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <item name="materialCardViewElevatedStyle">@style/BarApp.CardViewElevatedStyle</item>

        <!-- Personalizacion de componentes -->
        <item name="materialIconButtonFilledStyle">@style/Widget.Barapp.RoundedButton</item>

        <item name="textAppearanceDisplaySmall">@style/BarApp.TextAppearanceDisplaySmall</item>

        <!-- Status bar -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        
        <item name="actionOverflowButtonStyle">@style/Widget.Barapp.RoundedButton</item>

        <item name="android:actionButtonStyle">@style/ActionButton</item>
        
        <!-- Animaciones -->
        <item name="motionDurationLong1">@integer/fragment_transition_enter_long_duration</item>
        <item name="motionDurationMedium2">@integer/fragment_transition_exit_long_duration</item>

    </style>
    
    <style name="Widget.Barapp.RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.Barapp.RoundedButton" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="backgroundTint">@color/rounded_button_container_color_selector</item>
        <item name="iconTint">@color/rounded_button_text_color_selector</item>
        <item name="android:layout_margin">@dimen/round_button_margin</item>
        <item name="theme">@style/ThemeOverlay.Material3.Button.IconButton.Filled</item>
    </style>

    <style name="Widget.Barapp.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="buttonBarButtonStyle">@style/Widget.Barapp.RoundedButton</item>
        <item name="buttonStyle">@style/Widget.Barapp.RoundedButton</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.ActionButton">
        <item name="android:drawablePadding">8dp</item>
        <item name="drawableTint">@color/rounded_button_text_color_selector</item>
    </style>

    <style name="BarApp.TextAppearanceBarName" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="BarApp.TextAppearanceTitle" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BarApp.TextAppearanceTitleMain" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="BarApp.TextAppearanceTitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BarApp.TextAppearanceDisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="fontFamily">@font/sansita_swashed</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="BarApp.CardViewElevatedStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="backgroundTint">@color/md_theme_light_surface1_overlay</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="BarApp.TextAppearancePuntuactionTitleDisplay" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/orange_primary</item>
    </style>

    <style name="BarApp.RatingBarSmallDisplaySmall" parent="@android:style/Widget.Material.RatingBar.Small">
        <item name="android:indeterminate">false</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">1</item>
        <item name="android:progressTint">@color/orange_primary</item>
    </style>

    <style name="BarApp.RatingBarSmallDisplayMedium" parent="@android:style/Widget.Material.Light.RatingBar.Indicator">
        <item name="android:indeterminate">false</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">1</item>
        <item name="android:progressTint">@color/orange_primary</item>
    </style>

    <style name="BarApp.RatingBarDisplayLarge" parent="@android:style/Widget.Material.Light.RatingBar">
        <item name="android:indeterminate">false</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">1</item>
        <item name="android:progressTint">@color/orange_primary</item>
    </style>
</resources>
